{
  "name": "@acme/frontend",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "dotenvx run -- next dev",
    "build": "dotenvx run -- next build",
    "start": "dotenvx run -- next start"
  },
  "dependencies": {
    "next": "~15.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0"
  },
  "nx": {
    "tags": [
      "type:app",
      "scope:frontend"
    ],
    "targets": {
      "container": {
        "executor": "@nx-tools/nx-container:build",
        "dependsOn": [
          "build"
        ],
        "defaultConfiguration": "development",
        "options": {
          "defaultEngine": "docker",
          "defaultRegistry": "ghcr.io",
          "platforms": [
            "linux/amd64",
            "linux/arm64"
          ]
        },
        "configurations": {
          "development": {
            "push": false,
            "metadata": {
              "images": [
                "ritthikrairw/acme-frontend",
                "ghcr.io/ritthikrairw/acme-frontend"
              ],
              "tags": [
                "type=raw,value=development",
                "type=schedule",
                "type=ref,event=branch",
                "type=ref,event=tag",
                "type=ref,event=pr",
                "type=semver,pattern={{version}}",
                "type=semver,pattern={{major}}.{{minor}}",
                "type=semver,pattern={{major}}",
                "type=sha"
              ]
            }
          },
          "staging": {
            "push": true,
            "metadata": {
              "images": [
                "ritthikrairw/acme-frontend",
                "ghcr.io/ritthikrairw/acme-frontend"
              ],
              "tags": [
                "type=raw,value=staging",
                "type=schedule",
                "type=ref,event=branch",
                "type=ref,event=tag",
                "type=ref,event=pr",
                "type=semver,pattern={{version}}",
                "type=semver,pattern={{major}}.{{minor}}",
                "type=semver,pattern={{major}}",
                "type=sha"
              ]
            }
          },
          "production": {
            "push": true,
            "metadata": {
              "images": [
                "ritthikrairw/acme-frontend",
                "ghcr.io/ritthikrairw/acme-frontend"
              ],
              "tags": [
                "type=raw,value=production",
                "type=schedule",
                "type=ref,event=branch",
                "type=ref,event=tag",
                "type=ref,event=pr",
                "type=semver,pattern={{version}}",
                "type=semver,pattern={{major}}.{{minor}}",
                "type=semver,pattern={{major}}",
                "type=sha"
              ]
            }
          }
        }
      }
    }
  }
}
